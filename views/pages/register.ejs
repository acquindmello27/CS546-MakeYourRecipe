    <![endif]-->
</head>

<body>

    <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
          <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="brand" id="homeIcon" href="/"><img src="/assets/images/logo.jpg"></a>
            </div>
			
			 <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav navbar-right">
                          <li id="logon"><a href="/">LOGIN</a></li>
                          <li id="register"><a href="/register">SIGNUP</a></li>
                </ul>
</div>

</div>
</nav>
			
    <div class="container">
      
        <main>
           <br/>
		   <br/>
			<section>
			
			<div class="row" style="padding-top:100px">
			<div class="col-md-4 col-md-offset-4">
				<form action="/createUser" method="post" class="form-signin">
  <input type="email" class="form-control" placeholder="Email" id="register_email" name="register_email" required>
                    <input type="password" class="form-control" placeholder="Password" id="register_passwd" name="register_passwd" required>
                    <div>
                        <a class="pull-right" style="margin-bottom:10px" href="/">Forgot password?</a>
                    </div>
                    <button class="btn btn-md btn-primary btn-block" type="submit">Sign up</button>
                </form>
            <div class="text-center">
                <span>Already have an account?<a href="/"> Login </a></span>
            </div>

			</div>
			</div>
		
		<div class="alert alert-danger hidden" id="error-message-login"> </div>
				<% var login_error; %>
				<% if(login_error) {  %>
					<div class="alert alert-danger" role="alert" id="login_error"> <%= login_error %> </div>
				<% } %>
	
			</section>
        </main>
		<br/>

			
    </div>
  <% include ../partials/scripts.ejs %>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js" integrity="sha384-
